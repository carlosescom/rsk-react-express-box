{
  "ignore": [
    "README.md",
    ".gitignore"
  ],
  "commands": {
    "Compile contracts": "truffle compile",
    "Migrate contracts": "truffle migrate",
    "Test contracts": "truffle test",
    "Run dev server": "cd app && yarn dev",
    "Run production server": "cd app && yarn start",
    "Build for production": "cd app && yarn build"
  },
  "hooks": {
    "post-unpack": "cd app/ && npm install -g yarn && yarn"
  }
}
